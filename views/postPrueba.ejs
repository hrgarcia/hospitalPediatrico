<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>post</title>
        <%-include('fragments/head')%>
        <link href="/css/formPrueba.css" rel="stylesheet" />
    </head>
    <body>
        <%-include('fragments/navbar')%>

        <div class="container">
            <form action="/nuevoPost"method="post">
                <span class="obligatorio">* Obligatorio</span>
                <div class="row">
                    <div class="col-25">
                        <label for="titulo">Titulo</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <input
                            type="text"
                            name="titulo"
                            placeholder="Agrega un titulo.."
                        />
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="descripcion">Descripcion</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <textarea
                            id="subject"
                            name="descripcion"
                            placeholder="Agrega una descripcion.."
                            style="height: 200px"
                        ></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="fecha">Fecha</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <input type="date" id="lname" name="fecha"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="imagen">Imagen</label>
                    </div>
                    <div class="col-75">
                        <input type="file" name="imagen"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="enlace">Enlace</label>
                    </div>
                    <div class="col-75">
                        <input
                            type="text"
                            name="enlace"
                            placeholder="Agrega un enlace.."
                        />
                    </div>
                </div>
                <span class="obligatorio">Los tags deben estar separados por una ","</span>
                <div class="row">
                    <div class="col-25">
                        <label class="letras" for="tag">Tag:</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <input type="text" id="tag" name="tag" placeholder="Agregar tags..."/>
                    </div>
                </div>
                <div class="row align-items-center">
                    <input type="submit" value="Submit" />
                </div>
            </form>
        </div>
        <%-include('fragments/footer')%>
        <!-- footer-->
        <!-- JAVASCRIPT FILES -->
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/owl.carousel.min.js"></script>
        <script src="js/scrollspy.min.js"></script>
        <script src="js/custom.js"></script>
        <!-- JavaScript Bundle with Popper -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
