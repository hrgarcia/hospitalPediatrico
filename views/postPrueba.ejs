<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>formularioPost</title>
        <%-include('fragments/head')%>
        <link href="/css/formPrueba.css" rel="stylesheet" />
    </head>
    <body>
        <%-include('fragments/navbar', {login:login})%>

        <div class="container">
            <form action="/posteo" method="post">
                <span class="obligatorio">* Obligatorio</span>
                <div class="row">
                    <span class="obligatorio" style="margin: top 20px"
                        >El titulo solo puede contener letras y numeros <br />
                        Minimo de caracteres: 10
                        <br />
                        Maximo de caracteres: 55
                    </span>
                    <div class="col-25">
                        <i class="fa-solid fa-comment-medical"></i>
                        <label for="titulo">Titulo</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <input
                            type="text"
                            name="titulo"
                            id="titulo"
                            placeholder="Agrega un titulo.."
                        />
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <i class="fa-solid fa-bars"></i>
                        <label for="descripcion">Descripcion</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <textarea
                            id="subject"
                            name="descripcion"
                            placeholder="Agrega una descripcion.."
                            style="height: 200px"
                        ></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <i class="fa-regular fa-calendar-check"></i>
                        <label for="fecha">Fecha</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <input type="date" id="lname" name="fecha" />
                    </div>
                </div>
                <div class="row input-group">
                    <div class="col-25">
                        <i class="fa-regular fa-image"></i>
                        <label for="files">Select files</label>
                    </div>
                    <div class="col-75">
                        <input id="files" type="file" multiple />
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <i class="fa-solid fa-link"></i>
                        <label for="enlace">Enlace</label>
                    </div>
                    <div class="col-75">
                        <input
                            type="text"
                            name="enlace"
                            placeholder="Agrega un enlace.."
                        />
                    </div>
                </div>
                <span class="obligatorio"
                    >Los tags deben estar separados por una ","</span
                >
                <div class="row">
                    <div class="col-25">
                        <i class="fa-solid fa-tag"></i>
                        <label class="letras" for="tag">Tag:</label>
                        <span class="obligatorio">*</span>
                    </div>
                    <div class="col-75">
                        <input
                            type="text"
                            id="tag"
                            name="tag"
                            placeholder="Agregar tags..."
                        />
                    </div>
                </div>
                <div class="row align-items-center">
                    <input type="submit" value="Subir" id="subirPost" />
                </div>
            </form>
        </div>
        <%-include('fragments/footer')%>
        <!-- footer-->
        <!-- JAVASCRIPT FILES -->
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/owl.carousel.min.js"></script>
        <script src="js/scrollspy.min.js"></script>
        <script src="js/custom.js"></script>
        <!-- JavaScript Bundle with Popper -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script type="text/javascript">
            const botonpress = document.getElementById("subirPost");
            const tituloinp = document.getElementById("titulo");
            const descripcioninp = document.getElementById("subject");
            const fechainp = document.getElementById("lname");
            const taginp = document.getElementById("tag");
            botonpress.addEventListener("click", (e) => {
                // Validacion si los campos esnta vacios
                let date = new Date();
                let fechaactual = String(
                    date.getFullYear() +
                        "-" +
                        String(date.getMonth() + 1).padStart(2, "0") +
                        "-" +
                        date.getDate()
                ).padStart(2, "0");

                "-" + console.log("actual " + fechaactual);
                console.log("input " + fechainp.value);
                if (
                    validator.isEmpty(tituloinp.value) == true ||
                    validator.isEmpty(descripcioninp.value) == true ||
                    validator.isEmpty(fechainp.value) == true ||
                    validator.isEmpty(taginp.value) == true
                ) {
                    Swal.fire({
                        position: "top-end",
                        icon: "error",
                        text: "Algunos campos obligatorios no estan siendo completados",
                        showConfirmButton: false,
                        timer: 2500,
                        width: 300,
                        padding: 0.5,
                    });
                    e.preventDefault();
                }
                // Validacion si el tipo de dato es correcto
                else if (
                    validator.isAlphanumeric(tituloinp.value) == false ||
                    validator.isAlphanumeric(taginp.value) == false
                ) {
                    Swal.fire({
                        position: "top-end",
                        icon: "error",
                        text: "Revisar el tipo de dato requerido en los campos obligatorios",
                        showConfirmButton: false,
                        timer: 2500,
                        width: 300,
                        padding: 0.5,
                    });
                    e.preventDefault();
                } else if (
                    validator.isLength(tituloinp.value[{ min: 10, max: 55 }]) ==
                    false
                ) {
                    Swal.fire({
                        position: "top-end",
                        icon: "error",
                        text: "el titulo no cumple con los requisitos",
                        showConfirmButton: false,
                        timer: 2500,
                        width: 300,
                        padding: 0.5,
                    });
                    e.preventDefault();
                }
            });
        </script>
    </body>
</html>
